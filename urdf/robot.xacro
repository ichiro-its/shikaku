<?xml version="1.0"?>

<robot name="UMARU" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="scale" value="1"/>

  <material name="cyan">
    <color rgba="0 255 255 1"/>
  </material>

  <material name="yellow">
    <color rgba="255 255 0 1"/>
  </material>

  <link name="world"></link>

  <link name="body">
    <visual>
      <geometry>
        <box size="${scale * 0.147}  ${scale * 0.117} ${scale * 0.176124}"/>
      </geometry>
      <origin rpy="0 0 1.57079632679"/>
      <material name="cyan"/>
    </visual>
    <collision>
      <geometry>
        <box size="${scale * 0.147}  ${scale * 0.117} ${scale * 0.176124}"/>
      </geometry>
      <origin rpy="0 0 1.57079632679"/>
    </collision>
  </link>
  <joint name="body_with_world" type="fixed">
    <parent link="world"/>
    <child link="body"/>
  </joint>

  <link name="right_shoulder_horizontal">
    <visual>
      <geometry>
        <box size="${scale * 0.055} ${scale * 0.065} ${scale * 0.030}"/>
      </geometry>
      <origin rpy="0 0 1.57079632679" xyz="0 0 0"/>
      <material name="yellow"/>
    </visual>
    <collision>
      <geometry>
        <box size="${scale * 0.055} ${scale * 0.065} ${scale * 0.030}"/>
      </geometry>
      <origin rpy="0 0 1.57079632679" xyz="0 0 0"/>
    </collision>
  </link>
  <joint name="R_SHO_PITCH" type="fixed"> <!-- JOINT_ID = 1 -->
    <axis xyz="0 1 0"/>
    <parent link="body"/>
    <child link="right_shoulder_horizontal"/>
    <origin xyz="${scale * -0.0027} ${scale * -0.101} ${scale * 0.064061}"/>
  </joint>

  <link name="left_shoulder_horizontal">
    <visual>
      <geometry>
        <box size="${scale * 0.055} ${scale * 0.065} ${scale * 0.030}"/>
      </geometry>
      <origin rpy="0 0 1.57079632679" xyz="0 0 0"/>
      <material name="yellow"/>
