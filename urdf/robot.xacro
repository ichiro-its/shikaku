        <box size="${scale * 0.0402} ${scale * 0.038} ${scale * 0.156}"/>
      </geometry>
      <origin rpy="0 0 1.57079632679" xyz="0 0 0"/>
    </collision>
  </link>
  <!-- TODO: Type should be revolute -->
  <joint name="L_SHO_ROLL" type="fixed"> <!-- JOINT_ID = 4 -->
    <parent link="left_shoulder_vertical"/>
    <child link="left_arm"/>
    <origin xyz="0 0 ${scale * -0.084}"/>
  </joint>

  <link name="right_hand">
    <visual>
      <geometry>
