  </link>
  <joint name="R_ELBOW" type="revolute"> <!-- JOINT_ID = 5 -->
    <axis xyz="0 1 0"/>
    <limit effort="1000.0" lower="-2.35619" upper="2.35619" velocity="0.5"/>
    <parent link="right_arm"/>
    <child link="right_hand"/>
    <origin xyz="0 0 ${scale * -0.065}"/>
  </joint>

  <link name="left_hand">
