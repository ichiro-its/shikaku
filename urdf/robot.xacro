      </geometry>
      <origin rpy="0 0 1.57079632679" xyz="0 0 0"/>
    </collision>
  </link>
  <joint name="L_SHO_PITCH" type="continuous"> <!-- JOINT_ID = 2 -->
    <axis xyz="0 1 0"/>
    <parent link="body"/>
    <child link="left_shoulder_horizontal"/>
    <origin xyz="${scale * 0.0027} ${scale * 0.101} ${scale * 0.064061}"/>
