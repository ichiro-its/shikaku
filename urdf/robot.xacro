  <link name="right_arm">
    <visual>
      <geometry>
        <box size="${scale * 0.0402} ${scale * 0.038} ${scale * 0.156}"/>
      </geometry>
      <origin rpy="0 0 1.57079632679" xyz="0 0 0"/> 
      <material name="cyan"/>
    </visual>
    <collision>
      <geometry>
        <box size="${scale * 0.0402} ${scale * 0.038} ${scale * 0.156}"/>
      </geometry>
      <origin rpy="0 0 1.57079632679" xyz="0 0 0"/>
    </collision>
  </link>
  <!-- TODO: Type should be revolute -->
  <joint name="R_SHO_ROLL" type="continuous"> <!-- JOINT_ID = 3 -->
    <axis xyz="1 0 0"/>
    <parent link="right_shoulder_vertical"/>
    <child link="right_arm"/>
    <origin xyz="0 0 ${scale * -0.084}"/>
  </joint>

  <link name="left_shoulder_vertical">
    <visual>
      <geometry>
        <box size="${scale * 0.030} ${scale * 0.065} ${scale * 0.020}"/>
      </geometry>
      <origin rpy="0 0 1.57079632679" xyz="0 0 0"/>
      <material name="yellow"/>
